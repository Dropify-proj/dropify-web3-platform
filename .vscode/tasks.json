				"clear": false
			},
			"problemMatcher": "$tsc"
		},
		{
			"label": "Type Check",
			"type": "shell",
			"command": "npm run type-check",
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": "$tsc"
		}
